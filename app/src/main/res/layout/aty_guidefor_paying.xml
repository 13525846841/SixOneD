<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/gray_title_layout" />



    <RelativeLayout
        android:id="@+id/rl_discount_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_14"
        android:paddingLeft="20.5dp"
        android:paddingRight="20.5dp"
        android:paddingTop="@dimen/dp_14" >

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="您有2张优惠券可以使用"
            android:textColor="#4B4B4B"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/tv_coupon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="@dimen/dp_14"
        android:paddingTop="@dimen/dp_14"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="需支付:"/>
        <TextView
            android:id="@+id/pay_amount2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:text="200元"/>

    </LinearLayout>
    <View style="@style/common_split_line_1dp" />
    <RelativeLayout
        android:id="@+id/rl_zfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_14"
        android:paddingLeft="20.5dp"
        android:paddingRight="20.5dp"
        android:paddingTop="@dimen/dp_14" >

        <TextView
            android:id="@+id/tv_zfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/payby_zfb"
            android:textColor="#4B4B4B"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/tv_zfb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <View style="@style/common_split_line_1dp" />

    <RelativeLayout
        android:id="@+id/rl_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_14"
        android:paddingLeft="20.5dp"
        android:paddingRight="20.5dp"
        android:paddingTop="@dimen/dp_14" >

        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/payby_bankcards"
            android:textColor="#4B4B4B"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/tv_bank2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <View style="@style/common_split_line_1dp" />

    <RelativeLayout
        android:id="@+id/rl_purse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingBottom="@dimen/dp_14"
        android:paddingLeft="20.5dp"
        android:paddingRight="20.5dp"
        android:paddingTop="@dimen/dp_14" >

        <TextView
            android:id="@+id/tv_purse_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/payby_purse"
            android:textColor="#4B4B4B"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_restofpurse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_purse2"
            android:text="@string/zero"
            android:textColor="#898989"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/tv_purse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>


</LinearLayout>