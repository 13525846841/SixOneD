<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/iv_delect"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:src="@drawable/select_temp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.library.base.widget.SuperTextView
        android:id="@+id/time_stv"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_45"
        app:layout_constraintLeft_toRightOf="@+id/close_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:sLeftTextColor="@color/black"
        app:sLeftTextSize="@dimen/sp_15"
        app:sLeftTextString="提醒时间"
        app:sRightIconRes="@drawable/arrows"
        app:sBottomDividerLineMarginLR="@dimen/dp_12"
        app:sRightTextColor="@color/doctor_info_text_color"
        app:sRightTextSize="@dimen/sp_15" />

    <com.library.base.widget.SuperTextView
        android:id="@+id/action_stv"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_45"
        app:layout_constraintLeft_toRightOf="@+id/close_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_stv"
        app:sLeftTextColor="@color/black"
        app:sLeftTextSize="@dimen/sp_15"
        app:sLeftTextString="向患者发送"
        app:sRightIconRes="@drawable/arrows"
        app:sRightTextColor="@color/doctor_info_text_color"
        app:sRightTextSize="@dimen/sp_15" />

</android.support.constraint.ConstraintLayout>