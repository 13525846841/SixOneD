<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.library.base.widget.SuperButton
        android:id="@+id/btn_join"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_80"
        android:text="立即体验"
        android:textColor="@color/main_color"
        android:textSize="@dimen/sp_16"
        app:sCornersRadius="@dimen/dp_30"
        app:sSelectorNormalColor="@color/transparent"
        app:sSelectorPressedColor="@color/transparent"
        app:sStrokeColor="@color/main_color"
        app:sStrokeWidth="@dimen/dp_1"
        android:visibility="gone"
        app:sUseSelector="true" />

    <LinearLayout
        android:id="@+id/viewGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" />

</RelativeLayout>