<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center"
        android:text="金额选择"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/price_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:spanCount="3" />

    <com.library.base.widget.SuperTextView
        android:id="@+id/wechat_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/price_recycler"
        app:sDividerLineType="none"
        app:sLeftIconRes="@drawable/weixin"
        app:sLeftTextColor="@color/black"
        app:sLeftTextSize="@dimen/sp_16"
        app:sLeftTextString="微信"
        app:sRightViewType="radioBtn" />

    <com.library.base.widget.SuperTextView
        android:id="@+id/ali_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/wechat_pay"
        app:sDividerLineType="none"
        app:sLeftIconRes="@drawable/zhifubao"
        app:sLeftTopTextColor="@color/black"
        app:sLeftTopTextSize="@dimen/sp_16"
        app:sLeftTopTextString="支付宝"
        app:sRightViewType="radioBtn" />

    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        app:layout_constraintTop_toBottomOf="@+id/ali_pay">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/dialog_button"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#e6e6e6" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@color/main_color"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <View
        style="@style/common_split_line"
        app:layout_constraintTop_toTopOf="@+id/footer_layout" />

</android.support.constraint.ConstraintLayout>