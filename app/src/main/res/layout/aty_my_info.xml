<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/review_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_title_pink"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/account_stv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:sLeftTextColor="@color/black"
            android:enabled="false"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="六一账号"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/nickname_stv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="昵称"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/address_stv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="所在地"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/hospital_stv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="医院"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/office_stv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="科室"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/job_title_stv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="职称"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/expertise_stv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="专长"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/description_stv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="简介"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <View style="@style/common_split_line_6dp" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/receipt_stv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="收款人"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/receipt_phone_stv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="收款人手机"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/bank_account_stv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="银行卡(账)号"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/bank_stv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="开户银行"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/bank_branch_stv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="开户支行"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <View style="@style/common_split_line_6dp" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingTop="@dimen/padding_top">

            <ImageView
                android:id="@+id/my_info_img_real"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_upload_doc_head"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/my_info_img_qualification" />

            <ImageView
                android:id="@+id/my_info_img_qualification"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_upload_doc_paper"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@+id/my_info_img_real"
                app:layout_constraintRight_toRightOf="parent" />

            <com.library.base.widget.SuperButton
                android:id="@+id/self_upload_sb"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_8"
                android:minWidth="@dimen/dp_60"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="上传医师照"
                android:textColor="@color/main_color"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/my_info_img_real"
                app:layout_constraintRight_toRightOf="@+id/my_info_img_real"
                app:layout_constraintTop_toBottomOf="@+id/my_info_img_real"
                app:sCornersRadius="@dimen/dp_4"
                app:sSolidColor="@color/white"
                app:sStrokeColor="@color/main_color"
                app:sStrokeWidth="@dimen/dp_1" />

            <com.library.base.widget.SuperButton
                android:id="@+id/certificate_upload_sb"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_8"
                android:minWidth="@dimen/dp_60"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="上传医师执业证照"
                android:textColor="@color/main_color"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/my_info_img_qualification"
                app:layout_constraintRight_toRightOf="@+id/my_info_img_qualification"
                app:layout_constraintTop_toBottomOf="@+id/my_info_img_qualification"
                app:sCornersRadius="@dimen/dp_4"
                app:sSolidColor="@color/white"
                app:sStrokeColor="@color/main_color"
                app:sStrokeWidth="@dimen/dp_1" />

        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/my_info_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/my_info_comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_14"
                android:text="评价"
                android:textColor="@color/doctor_info_text_color" />

            <TextView
                android:id="@+id/my_info_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/my_info_comment_tv"
                android:text="(48)"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/my_info_comment_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/pay_index_icon"
                android:paddingLeft="6dp"
                android:paddingRight="@dimen/dp_14"
                android:text="更多"
                android:textColor="@color/doctor_info_text_color" />

        </RelativeLayout>

        <com.yksj.consultation.sonDoc.views.ScrollListView
            android:id="@+id/my_info_comment_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14">

        </com.yksj.consultation.sonDoc.views.ScrollListView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>