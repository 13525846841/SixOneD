<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_bottom"
    android:paddingLeft="@dimen/padding_left"
    android:paddingRight="@dimen/padding_right"
    android:paddingTop="@dimen/padding_top">

    <com.library.base.widget.CLRoundLayout
        android:id="@+id/rund_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        app:rRadii="@dimen/dp_4">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </com.library.base.widget.CLRoundLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/case_image"
        android:layout_toRightOf="@+id/rund_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/case_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="病历名称"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/case_keshi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="病历科室"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_text1" />

        <TextView
            android:id="@+id/case_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="上传时间"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_text1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/case_see_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/icon_scannum"
                android:gravity="center_vertical"
                android:textColor="@color/color_text1" />

            <TextView
                android:id="@+id/case_talk_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/icon_reply"
                android:gravity="center_vertical"
                android:textColor="@color/color_text1" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/case_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/arrows" />

</RelativeLayout>