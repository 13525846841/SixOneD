<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <com.yksj.healthtalk.views.RoundImageView
        android:id="@+id/list_image"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/case_image"
        android:layout_toRightOf="@+id/list_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/case_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:text="病历名称"
            android:textColor="@color/color_text1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/case_keshi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="6dp"
            android:text="病历科室"
            android:textColor="@color/color_text1" />

        <TextView
            android:id="@+id/case_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="3dp"
            android:text="上传时间"
            android:textColor="@color/color_text1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/case_see_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/icon_scannum"
                android:gravity="center_vertical"
                android:text="12"
                android:textColor="@color/color_text1" />

            <TextView
                android:id="@+id/case_talk_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/icon_reply"
                android:gravity="center_vertical"
                android:text="12"
                android:textColor="@color/color_text1" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/case_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/pay_index_icon" />

</RelativeLayout>