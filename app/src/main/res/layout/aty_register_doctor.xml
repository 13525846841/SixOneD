<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_title_pink"
            android:gravity="center"
            android:text="请您填写以下认证信息,便于我们联系到您"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/registe_doctor_edit_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:enabled="false"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="真实姓名"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/registe_doctor_tv_addr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:enabled="false"
            app:sRightIconRes="@drawable/arrows"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="工作地点"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/registe_doctor_tv_hospital"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:enabled="false"
            app:sRightIconRes="@drawable/arrows"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="所在医院"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/registe_doctor_tv_office"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:enabled="false"
            app:sRightIconRes="@drawable/arrows"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="所在科室"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/registe_doctor_tv_doctitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:enabled="false"
            app:sRightIconRes="@drawable/arrows"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="职称"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/registe_doctor_tv_special"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:enabled="false"
            app:sRightIconRes="@drawable/arrows"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="专长"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/registe_doctor_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:enabled="false"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="简介"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/registe_doctor_img_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_upload_doc_head" />

            <ImageView
                android:id="@+id/registe_doctor_img_info"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_upload_doc_paper" />

        </LinearLayout>

        <com.library.base.widget.SuperTextView
            android:id="@+id/et_transfer_getname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:enabled="false"
            app:sRightIconRes="@drawable/arrows"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="收款人"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/et_transfer_gettele"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:enabled="false"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="收款人手机"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/et_transfer_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:enabled="false"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sRightIconRes="@drawable/arrows"
            app:sLeftTextString="银行卡(账)号"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/et_transfer_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:enabled="false"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sLeftTextString="开户银行"
            app:sRightIconRes="@drawable/arrows"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

        <com.library.base.widget.SuperTextView
            android:id="@+id/et_transfer_addr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:enabled="false"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_15"
            app:sRightIconRes="@drawable/arrows"
            app:sLeftTextString="开户支行"
            app:sRightTextColor="@color/doctor_info_text_color"
            app:sRightTextSize="@dimen/sp_15" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
