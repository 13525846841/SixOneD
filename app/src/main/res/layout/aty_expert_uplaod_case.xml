<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <include layout="@layout/gray_title_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="26dp"
        android:paddingLeft="26dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/color_text_gray"
        android:text="医生上传病历共享给其他医生学习交流"
        android:textSize="16sp" />

    <View style="@style/common_split_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="26dp"
        android:paddingLeft="26dp"
        android:textColor="@color/color_text_gray"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="请选择上传方式"
        android:textSize="16sp" />


    <Button
        android:id="@+id/expert_upload_case_from_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/bt_short_green"
        android:text="我的会诊病历"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/color_text_gray"
        android:paddingTop="@dimen/dp_8"
        android:text="从我的病历中选择"
        android:textSize="13sp" />


    <Button
        android:id="@+id/expert_upload_case_manualy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_14"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="12dp"
        android:background="@drawable/bt_short_green"
        android:text="手动上传"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:textColor="@color/color_text_gray"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/dp_8"
        android:text="医生手动填写患者的所有病历项"
        android:textSize="13sp" />


</LinearLayout>