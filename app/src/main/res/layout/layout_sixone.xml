<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/headView_w"
            android:layout_height="@dimen/headView_h"
            android:src="@drawable/bg_reply"
            android:layout_centerVertical="true"
            android:scaleType="centerInside" />

        <LinearLayout
            android:id="@+id/ll_laoshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/doc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/doc_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123333333"
                android:layout_marginTop="5dp"
                android:textColor="@color/tab_txt_gray"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/gc_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_select_num"
            android:gravity="center"
            android:text="92"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>