<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_layout"></include>

    <ScrollView
        android:id="@+id/create_case_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/create_case_keywords_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/color_text_gray"
            android:text="@string/key_words"
            />
        <HorizontalScrollView
            android:id="@+id/create_case_keywords_horscrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_below="@id/create_case_keywords_tv">
            <LinearLayout
                android:id="@+id/create_case_keywords_layout"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/create_case_keywords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                </LinearLayout>

                <Button
                    android:id="@+id/create_case_keywords_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/img_create_topic_add_label"
                    />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:textColor="@color/color_text_gray"
        android:text="@string/patient_info"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name2"
                 />
            <EditText android:id="@+id/create_case_input_name"
                android:singleLine="true"
                android:maxLength="10"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:background="@drawable/edittext_long_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sex2"/>
            <TextView android:id="@+id/create_case_input_sex"
                android:singleLine="true"
                android:maxLength="1"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_long_bg"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/birthday2"/>
            <EditText android:id="@+id/create_case_input_birthday"
                android:singleLine="true"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:editable="false"
                android:background="@drawable/edittext_long_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age2"/>
            <TextView android:id="@+id/create_case_input_age"
                android:singleLine="true"
                android:maxLength="3"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:inputType="number"
                android:background="@drawable/edittext_long_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zhiye2"/>
            <EditText android:id="@+id/create_case_input_zhiye"
                android:singleLine="true"
                android:maxLength="10"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:background="@drawable/edittext_long_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/create_case_tv_phone_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_num"/>
            <EditText android:id="@+id/create_case_input_address"
                android:singleLine="true"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:maxLength="11"
                android:inputType="phone"
                android:background="@drawable/edittext_long_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_card_num"
                />
            <EditText android:id="@+id/create_case_input_card_num"
                android:singleLine="true"
                android:maxLength="18"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:background="@drawable/edittext_long_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            </LinearLayout>
    </LinearLayout>
    <View style="@style/common_split_line_6dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/patient_condition"
        android:textColor="@color/color_text_gray"
        android:padding="6dp" />
    <LinearLayout
        android:id="@+id/create_case_patient_condition_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    <com.yksj.consultation.sonDoc.views.DrawableCenterTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/bt_item_add_bg"
        android:clickable="true"
        android:text="@string/click_add_item"
        android:id="@+id/create_case_click_add_item" />
    <View style="@style/common_split_line_6dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_gray"
        android:padding="6dp"
        android:text="@string/iamge_data"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false">
            <LinearLayout
                android:id="@+id/create_case_img_layout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

            </LinearLayout>
        </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:src="@drawable/chat_audio_norml"
            android:id="@+id/create_case_add_audio" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="88dp"
                android:src="@drawable/chat_photo_btn"
                android:id="@+id/create_case_add_image" />
        </LinearLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/create_case_add_audio"
            android:src="@drawable/chat_video_norml"
            android:id="@+id/create_case_add_video" />
    </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>