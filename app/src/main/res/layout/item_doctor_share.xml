<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12"
    android:paddingTop="@dimen/dp_8">

    <com.library.base.widget.CircleImageView
        android:id="@+id/share_doctor_head"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:scaleType="centerCrop"
        android:src="@drawable/default_head_female" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_single_picture"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:src="@drawable/default_jiugong_icon"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/picture_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_share_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray_color" />

            <TextView
                android:id="@+id/text_share_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/text_share_time"
                android:text="删除"
                android:textColor="@color/color_blue" />

            <TextView
                android:id="@+id/text_good_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/snsBtn"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_text_gray" />

            <ImageView
                android:id="@+id/snsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/im_snsimg" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/digCommentBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/im_distribute_comm_bg"
            android:visibility="gone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingBottom="8dip"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:paddingTop="12dip">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comment_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:nestedScrollingEnabled="false"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>