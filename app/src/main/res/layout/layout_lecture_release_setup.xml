<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布金额："
        android:textColor="@color/text_black_two"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/et_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_price" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_gray_bg"
        android:gravity="center_vertical"
        android:hint="请输入金额"
        android:inputType="numberDecimal"
        android:textColor="@color/color_text1"
        android:textColorHint="@color/doctor_info_hint"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="@+id/barrier"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择工作站："
        android:textColor="@color/text_black_two"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/station_lay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/station_lay" />

    <RelativeLayout
        android:id="@+id/station_lay"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/edittext_gray_bg"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="@+id/barrier"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_price">

        <TextView
            android:id="@+id/tv_station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="选择工作站"
            android:textColor="@color/text_black_two"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_look_what"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="谁可以看："
        android:textColor="@color/text_black_two"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/btn_all_person"
        app:layout_constraintTop_toBottomOf="@+id/station_lay"
        app:layout_constraintTop_toTopOf="@+id/btn_all_person" />

    <TextView
        android:id="@+id/btn_all_person"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/shape_lecture_look_bg"
        android:gravity="center"
        android:text="所有人"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="@+id/barrier"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/station_lay" />

    <TextView
        android:id="@+id/btn_station_person"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/shape_lecture_look_bg"
        android:gravity="center"
        android:text="工作站成员"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@+id/btn_all_person"
        app:layout_constraintTop_toBottomOf="@+id/station_lay" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="tv_price,tv_choose,tv_look_what"/>

</merge>