<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/phone"
        style="@style/item_white_bg_style"
        android:hint="请输入手机号码"
        android:inputType="number" />

    <LinearLayout style="@style/item_white_bg_style">

        <EditText
            android:id="@+id/pswd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_gray"
            android:hint="请输入密码"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/forget_pswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="@color/red" />

    </LinearLayout>

    <com.library.base.widget.SuperButton
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:enabled="false"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:sCornersRadius="@dimen/dp_4"
        app:sUseSelector="true"
        app:sSelectorDisableColor="@color/main_enable_color"
        app:sSelectorNormalColor="@color/main_color"
        app:sSelectorPressedColor="@color/main_color_pressed" />

    <com.library.base.widget.SuperButton
        android:id="@+id/registe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="注册"
        android:textColor="@color/main_color"
        android:textSize="@dimen/sp_16"
        app:sCornersRadius="@dimen/dp_4"
        app:sSolidColor="#ebeff7"
        app:sStrokeColor="@color/main_color"
        app:sStrokeWidth="@dimen/dp_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="使用第三方账号登录"
        android:textColor="@color/color_text_gray"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_weixin" />

            <TextView
                style="@style/icon_down"
                android:layout_below="@+id/image_weixin"
                android:text="@string/weixin_login" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_qq" />

            <TextView
                style="@style/icon_down"
                android:layout_below="@+id/image_qq"
                android:text="@string/qq_login" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_sina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_sina" />

            <TextView
                style="@style/icon_down"
                android:layout_below="@+id/image_sina"
                android:text="@string/sina_login" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>