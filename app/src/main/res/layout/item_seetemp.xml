<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_delect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/select_temp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_delect">


            <RelativeLayout
                android:id="@+id/rl_consul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="10dp">


                <TextView
                    android:id="@+id/times"
                    style="@style/info_text_left_sec"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@+id/image_consul2"
                    android:text="首次"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/template_time"
                    style="@style/info_text_left_sec"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp" />

                <ImageView
                    style="@style/text_check_imageview"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="10dp"
                android:layout_marginLeft="18dp"
                android:background="@color/gray_color" />

            <RelativeLayout
                android:id="@+id/rl_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="10dp">


                <TextView
                    style="@style/info_text_left_sec"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@+id/image_consul2"
                    android:text="向患者发送"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/template_content"
                    style="@style/info_text_left_sec"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp" />

                <ImageView
                    style="@style/text_check_imageview"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_color"/>


</LinearLayout>