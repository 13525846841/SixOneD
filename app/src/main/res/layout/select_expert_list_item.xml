<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <View
                android:layout_width="0dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/select_expert_list_item_headicon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="@dimen/dp_8"
                android:contentDescription="@string/desc"
                android:paddingLeft="@dimen/dp_8" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_expert_list_item_textlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/select_expert_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_text1"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/select_expert_list_item_doctitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/select_expert_list_item_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_text_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/select_expert_list_item_spetical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_text_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/select_expert_list_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:text="@string/select_him"
            android:background="@drawable/icon_btn_bg_80" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/select_expert_list_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_weight="1"
            android:textColor="@color/color_text_gray"
            android:text="剩余5个名额"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/select_expert_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/red"
            android:text="500元"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>