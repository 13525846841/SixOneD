<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/doctor_write_case_title"
        layout="@layout/gray_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ScrollView
        android:id="@+id/doctor_write_case_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctor_write_case_title"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:paddingLeft="16dp"
                android:paddingTop="6dp"
                android:text="患者信息"
                android:textColor="@color/color_text_gray"
                android:textSize="14sp" />

            <View style="@style/common_split_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/doctor_write_case_patient_base_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/item_text_left_style"
                        android:text="姓名:" />

                    <TextView
                        android:id="@+id/doctor_write_case_patient_name"
                        style="@style/item_text_right_style"
                        android:layout_weight="1"
                        android:text="" />

                    <TextView
                        style="@style/item_text_left_style"
                        android:text="性别:" />

                    <TextView
                        android:id="@+id/doctor_write_case_patient_sex"
                        style="@style/item_text_right_style"
                        android:layout_weight="1"
                        android:text="" />

                    <TextView
                        style="@style/item_text_left_style"
                        android:text="年龄:" />

                    <TextView
                        android:id="@+id/doctor_write_case_patient_age"
                        style="@style/item_text_right_style"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>

                <TextView
                    android:id="@+id/doctor_write_case_patient_phone"
                    style="@style/item_text_left_style"
                    android:layout_below="@id/doctor_write_case_patient_base_layout"
                    android:text="手机:" />

                <TextView
                    android:id="@+id/doctor_write_case_patient_phone2"
                    style="@style/item_text_right_style"
                    android:layout_alignBottom="@id/doctor_write_case_patient_phone"
                    android:layout_toRightOf="@id/doctor_write_case_patient_phone"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/doctor_write_case_patient_addr"
                    style="@style/item_text_left_style"
                    android:layout_below="@id/doctor_write_case_patient_phone"
                    android:text="患者位置:" />

                <TextView
                    android:id="@+id/doctor_write_case_patient_addr2"
                    style="@style/item_text_right_style"
                    android:layout_alignBottom="@id/doctor_write_case_patient_addr"
                    android:layout_toRightOf="@id/doctor_write_case_patient_addr"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="" />

                <TextView
                    android:id="@+id/doctor_write_case_patient_desc"
                    style="@style/item_text_left_style"
                    android:layout_below="@id/doctor_write_case_patient_addr"
                    android:text="病情描述:" />

                <TextView
                    android:id="@+id/doctor_write_case_patient_desc2"
                    style="@style/item_text_right_style"
                    android:layout_below="@id/doctor_write_case_patient_desc"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/doctor_write_case_patient_picture"
                    style="@style/item_text_left_style"
                    android:layout_below="@id/doctor_write_case_patient_desc2"
                    android:text="影像资料:"
                    android:visibility="gone" />

                <HorizontalScrollView
                    android:id="@+id/hs_patient_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_write_case_patient_picture"
                    android:scrollbars="none"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/doctor_write_case_patient_picture_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:orientation="horizontal">

                    </LinearLayout>
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:id="@+id/hs_patient_vdo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hs_patient_pic"
                    android:scrollbars="none"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/doctor_write_case_patient_vdo_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:orientation="horizontal">

                    </LinearLayout>
                </HorizontalScrollView>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:paddingLeft="16dp"
                android:paddingTop="6dp"
                android:text="会诊医生整理"
                android:textColor="@color/color_text_gray"
                android:textSize="14sp" />

            <View style="@style/common_split_line" />

            <TextView
                style="@style/item_text_left_style"
                android:paddingLeft="16dp"

                android:text="上传图像资料" />

            <HorizontalScrollView
                android:id="@+id/doctor_write_case_pic_horscrollview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/apt_case_template_item_img_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="82dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/doctor_write_case_pic_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"></LinearLayout>

                    <Button
                        android:id="@+id/doctor_write_case_pic_add"
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/img_add_icon" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                style="@style/item_text_left_style"
                android:paddingLeft="16dp"
                android:text="上传影像资料" />

            <HorizontalScrollView
                android:id="@+id/doctor_write_case_video_horscrollview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/apt_case_template_item_video_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="82dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/doctor_write_case_video_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"></LinearLayout>

                    <Button
                        android:id="@+id/doctor_write_case_video_add"
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/img_add_icon" />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/doctor_write_case_items_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/doctor_write_case_btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bt_regist_sure"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>