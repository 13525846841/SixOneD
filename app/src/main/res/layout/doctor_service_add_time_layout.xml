<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_bg"
    android:orientation="vertical">

    <include layout="@layout/gray_title_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:hint="请选择日期"
                android:padding="5dp"
                android:textColor="@color/color_text1"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/start_time"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="7dp">

                <TextView
                    android:id="@+id/start_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="选择门诊预约开始时间"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/start_time_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:hint="请选择"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View style="@style/common_split_line" />

            <RelativeLayout
                android:id="@+id/end_time"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="7dp">

                <TextView
                    android:id="@+id/end_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="选择门诊预约结束时间"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/end_time_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:hint="请选择"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View style="@style/common_split_line" />

            <RelativeLayout
                android:id="@+id/reply_action"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="重复"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/reply_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/person_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:gravity="center_vertical"
                    android:text="门诊预约人数"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/person_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/textfield_activated_holo_dark"
                    android:gravity="center_horizontal"
                    android:hint="请输入"
                    android:inputType="number"
                    android:maxLength="8"
                    android:minWidth="60dp"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View style="@style/common_split_line" />

            <RelativeLayout
                android:id="@+id/service_set_price_layout"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:gravity="center_vertical"
                    android:text="门诊预约价格"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/price_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/textfield_activated_holo_dark"
                    android:gravity="center_horizontal"
                    android:hint="请输入"
                    android:inputType="number|numberDecimal"
                    android:maxLength="8"
                    android:minWidth="60dp"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View style="@style/common_split_line" />

            <LinearLayout
                android:id="@+id/address_action"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="7dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:gravity="center_vertical"
                    android:paddingRight="7dp"
                    android:text="门诊预约地点"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </LinearLayout>


            <View style="@style/common_split_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ebeff7" />

            <RelativeLayout
                style="@style/text_check_relativeLayout"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:background="#ffffff">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="42dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:text="参加义诊"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />

                <ToggleButton
                    android:id="@+id/iv_addyizhen"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/check_on_off"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <View style="@style/common_split_line" />

            <RelativeLayout
                android:id="@+id/rl_yizhen"
                style="@style/text_check_relativeLayout"
                android:layout_height="40dp"
                android:visibility="gone"
                android:background="#ffffff">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="42dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:text="义诊价格"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/person_count_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/textfield_activated_holo_dark"
                    android:gravity="center_horizontal"
                    android:hint="请输入"
                    android:inputType="number|numberDecimal"
                    android:maxLength="8"
                    android:minWidth="60dp"
                    android:textColor="@color/color_text1"
                    android:textSize="16sp" />

            </RelativeLayout>
            <TextView
                android:id="@+id/address_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="40dp"
                android:textColor="@color/color_text1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/service_person"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="设置特殊收费人群"
                android:textColor="@color/color_text1"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>