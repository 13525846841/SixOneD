<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@android:color/white"
    android:orientation="vertical" >
    <include 
        layout="@layout/gray_title_layout"
        />
	 <RelativeLayout
        style="@style/conditionEdit"
        android:layout_marginTop="10dp"
        android:background="@drawable/textview_background_up" >

        <TextView
            style="@style/info_text_left"
            android:text="人群名称" />

        <EditText
            android:id="@+id/group_name"
            style="@style/doctor_info_style_arror"
            android:hint="最多支持10个字"
            android:maxLength="10"
            android:singleLine="true"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:textSize="15sp" />
    </RelativeLayout>
        <View
        android:id="@+id/splite_3" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
        style="@style/setup_view" />
    <RelativeLayout
        style="@style/conditionEdit"
        android:background="@drawable/textview_background_down" >

        <TextView
            style="@style/info_text_left"
            android:text="服务价格" />

        <EditText
            android:id="@+id/group_price"
            style="@style/doctor_info_style_arror"
            android:inputType="number"
            android:hint="0-19999元"
            android:singleLine="true"
            android:maxLength="5"
             android:gravity="right"
           android:layout_alignParentRight="true"
            android:textSize="15sp" />
    </RelativeLayout>
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置说明："
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textStyle="bold"
        />
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1、为特殊人群定制特殊购买服务价格； \n2、医生可设定特殊人群名称；\n3、医生可设定特殊人群的购买服务价格。"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textColor="#8c8c8c"
        android:textSize="15sp"
        />
        <Button 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="删除"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/delete_item"
            android:textColor="@color/white"
            android:background="@drawable/bt_orange"
            />
</LinearLayout>