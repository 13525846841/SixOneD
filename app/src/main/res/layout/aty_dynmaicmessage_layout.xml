<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer_layout"
        android:animateLayoutChanges="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.library.base.widget.Html5WebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/common_split_line_6dp" />

            <TextView
                android:id="@+id/comment_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_left"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_16"
                tools:text="123" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comment_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="@dimen/dp_8">

        <View style="@style/common_split_line" />

        <TextView
            android:id="@+id/comment_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_toLeftOf="@+id/praise_active"
            android:background="@drawable/shape_edittext_search"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_6"
            android:text="说点什么..."
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/praise_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_14"
            android:drawableLeft="@drawable/new_praise_selector"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/new_good_number_selector"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

</RelativeLayout>
