<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/det_img_head"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/default_head_doctor"
            android:padding="4dp" />

        <LinearLayout
            android:id="@+id/ll_laoshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/det_img_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_work_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="陈医生专家医生集团"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_doc_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_laoshi"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:text="院长"/>

                <TextView
                    android:id="@+id/tv_name_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_laoshi"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:text="李医生"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_doc_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                android:ellipsize="end"
                android:lines="1"
                android:text=""/>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>