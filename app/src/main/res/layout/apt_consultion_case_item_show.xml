<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="3dp">

    <TextView
        android:id="@+id/case_template_item_show_title"
        style="@style/title_grey_textview_style"
        android:layout_width="match_parent"
        android:paddingLeft="0dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/case_template_item_show_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/case_template_item_show_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="*"
            android:textColor="#ff6464"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/case_template_item_show_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_text_gray"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/case_template_item_show_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/case_template_item_show_text_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/case_template_item_show_text_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/case_template_item_show_text_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>

    <View style="@style/common_split_line" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/case_template_item_show_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>

    <View style="@style/common_split_line" />

</LinearLayout>
