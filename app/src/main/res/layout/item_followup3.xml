<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rl_zhifubao"
        style="@style/text_check_relativeLayout"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/temp_content"
                style="@style/info_text_left_sec"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@+id/image1"
                android:text="liming"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/temp_time"
                style="@style/info_text_left_sec"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/image1"
                android:text="2017-01-21"
                android:textSize="14sp"
                android:textColor="@color/gray_text"/>

        </LinearLayout>

        <ImageView style="@style/text_check_imageview" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_color"/>

</LinearLayout>