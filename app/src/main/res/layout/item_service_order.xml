<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/tab_txt_orange"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:visibility="gone" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_bottom"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:paddingTop="@dimen/padding_top">

        <RelativeLayout
            android:id="@+id/user_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/det_img_head"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_head_patient" />

            <LinearLayout
                android:id="@+id/ll_laoshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@id/det_img_head"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_12"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_laoshi"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/darkbacktext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:textColor="@color/text_max_color"
                android:textSize="@dimen/sp_18"
                android:visibility="gone"
                tools:text="图文咨询"
                tools:visibility="visible" />

        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/rl_experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/user_lay">

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toTopOf="@+id/tv_order_time"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toTopOf="@+id/end_time"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_number"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toTopOf="@+id/tv_circle"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_time"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/tv_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toTopOf="@+id/tv_order_money"
                app:layout_constraintTop_toBottomOf="@+id/end_time"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/tv_order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toTopOf="@+id/tv_dark_fail_reason"
                app:layout_constraintTop_toBottomOf="@+id/tv_circle"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/tv_dark_fail_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_money"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/btn1"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/select_btn_main"
                android:gravity="center"
                android:text="分 配"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/btn2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/btn2"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="12dp"
                android:background="@drawable/select_btn_main"
                android:gravity="center"
                android:text="抢 单"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn1"
                app:layout_constraintVertical_chainStyle="spread" />
            
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>