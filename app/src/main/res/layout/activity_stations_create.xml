<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作站背景图"
                    android:textColor="@color/color_blue"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/my_station_img_real"
                    android:layout_width="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_200"
                    android:scaleType="centerCrop"
                    android:src="@drawable/addpic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作站名称"
                    android:textColor="@color/color_blue"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/station_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_gray_bg"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:hint="请输入工作站名称"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColor="@color/color_text1"
                    android:textColorHint="@color/doctor_info_hint"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属医院"
                    android:textColor="@color/color_blue"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/station_hos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_gray_bg"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:hint="请输入工作站所属医院"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColor="@color/color_text1"
                    android:textColorHint="@color/doctor_info_hint"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医院介绍"
                    android:textColor="@color/color_blue"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/hos_intro"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/edittext_gray_bg"
                    android:gravity="start"
                    android:layout_marginTop="6dp"
                    android:hint="请输入工作站所属医院介绍"
                    android:maxLength="200"
                    android:maxLines="15"
                    android:textColor="@color/color_text1"
                    android:textColorHint="@color/doctor_info_hint"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_14"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作站介绍"
                    android:textColor="@color/color_blue"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/staion_intro"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/edittext_gray_bg"
                    android:gravity="left|top"
                    android:layout_marginTop="6dp"
                    android:hint="请输入工作站介绍"
                    android:maxLength="200"
                    android:maxLines="15"
                    android:textColor="@color/color_text1"
                    android:textColorHint="@color/doctor_info_hint"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_14"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="站长介绍"
                    android:textColor="@color/color_blue"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/leader_intro"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/edittext_gray_bg"
                    android:gravity="top|left"
                    android:layout_marginTop="6dp"
                    android:hint="请输入内容"
                    android:maxLength="200"
                    android:maxLines="15"
                    android:textColor="@color/color_text1"
                    android:textColorHint="@color/doctor_info_hint"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
