<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 对话框 透明样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--分割线  -->
    <style name="common_split_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/divider</item>
    </style>
    <!--1dp分割线  -->
    <style name="common_split_line_1dp">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>
    <!--2dp分割线  -->
    <style name="common_split_line_2dp">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/divider</item>
    </style>
    <!--4dp分割线  -->
    <style name="common_split_line_4dp">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@color/divider</item>
    </style>
    <!--横分割线  -->
    <style name="common_split_vertical_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
        <item name="android:background">@color/divider</item>
    </style>
    <!--6dp横分割线  -->
    <style name="common_split_line_6dp">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dp_6</item>
        <item name="android:background">@color/divider</item>
    </style>
    <!--10dp横分割线  -->
    <style name="common_split_line_10dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/gray_color</item>
    </style>
    <!--title 按钮-->
    <style name="title_btn_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#2e2c2c</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/dialog_bg_shape</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="BaseDialog.Animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/base_dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/base_dialog_exit_anim</item>
    </style>
    <!--评论Dialog-->
    <style name="CommentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!--白色主题样式，，注意每一项都不能少-->
    <style name="Choose.Whit" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/white</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/white</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">true</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/icon_back_gray</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/ic_arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/ic_arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/black</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/black</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/picture_checkbox_selector</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <!--<item name="picture.style.checkNumMode">true</item>-->
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">true</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/color_fa</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/main_color</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/main_color</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/num_oval</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/white</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/black</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/main_color</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/color_fa</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/icon_back_gray</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/bar_grey</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/bar_grey</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/white</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/orange_oval</item>
    </style>
</resources>